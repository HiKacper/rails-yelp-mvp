<h2><strong><%= @restaurant.name %></strong></h2>
<hr>

<ul class="list-group">
    <li class="list-group-item"><%= @restaurant.address %></li>
    <li class="list-group-item"><%= @restaurant.phone_number %></li>
    <li class="list-group-item"><%= @restaurant.category %></li>
</ul>

<div>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

<%= link_to "Back to list of All Restaurants", restaurants_path, class: "btn btn-primary"%>
</div>


<h2><strong>Reviews</strong></h2>
<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"> <p><strong> Review: </strong></p> <%= review.content %> </li>
  <li class="list-group-item"> <p><strong> Rating: </strong></p> <%= review.rating %></li>
<% end %>
</ul>
